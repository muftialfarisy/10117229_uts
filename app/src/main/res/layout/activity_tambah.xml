<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tambah">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_teman"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Tambah Teman"
            android:id="@+id/textT_teman"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="432dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp">


        <TextView
            android:id="@+id/nimTambah"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="180dp"
            android:textStyle="bold"
            android:text="NIM :" />

        <TextView
            android:id="@+id/namaTambah"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="210dp"
            android:textStyle="bold"
            android:text="nama :" />
        <TextView
            android:id="@+id/kelasTambah"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="240dp"
            android:textStyle="bold"
            android:text="Kelas :" />
        <TextView
            android:id="@+id/telpTambah"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="270dp"
            android:textStyle="bold"
            android:text="Telpon :" />

        <EditText
            android:id="@+id/email_tambah"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="290dp"
             />

        <EditText
            android:id="@+id/nama_tambah"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="200dp"
             />

        <EditText
            android:id="@+id/kelas_tambah"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="230dp"
            />

        <EditText
            android:id="@+id/telp_tambah"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="260dp"
             />
        <TextView
            android:id="@+id/emailTambah"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="300dp"
            android:textStyle="bold"
            android:text="Email :" />

        <EditText
            android:id="@+id/nim_tambah"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="170dp" />

        <TextView
            android:id="@+id/sosmedTambah"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="330dp"
            android:text="Social Media :"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sosmed_tambah"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="320dp"
             />
        <Button
            android:layout_width="107dp"
            android:id="@+id/btn_cancel"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="156dp"
            android:layout_marginTop="371dp"
            android:background="@drawable/btn_rounded2"
            android:text="Cancel"
            android:textColor="#FB0303" />
        <Button
            android:layout_width="107dp"
            android:id="@+id/btn_tambah"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="266dp"
            android:layout_marginTop="371dp"
            android:background="@drawable/btn_rounded"
            android:text="Tambah"
            android:textColor="#ffff" />
    </RelativeLayout>
</RelativeLayout>